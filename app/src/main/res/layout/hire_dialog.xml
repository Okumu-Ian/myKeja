<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="4dp">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:tint="@android:color/holo_red_dark"
        app:srcCompat="@drawable/ic_close_dialog_ios"
        android:id="@+id/img_additional_dialog_dismiss"
        android:layout_gravity="end"
        android:layout_margin="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:padding="2dp"
            android:src="@drawable/five"
            android:id="@+id/img_additional_profile"
            android:layout_marginTop="50dp"
            />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:text="Architect James"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:id="@+id/txt_additional_name"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:textStyle="bold|italic"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:text="+254799865865"
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="center"
            android:id="@+id/txt_additional_contact"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_number_pad"
            android:fontFamily="sans-serif"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center">

        <android.support.v7.widget.AppCompatButton
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Call Now"
            android:elevation="2dp"
            android:drawableEnd="@drawable/ic_arch_phone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawableTint="@color/white"
            android:id="@+id/btn_additional_call_now"
            android:background="@drawable/dialog_buttons"
            android:textColor="@color/white"
            android:layout_marginEnd="5dp"
            android:textAllCaps="false"/>


        <android.support.v7.widget.AppCompatButton
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:textAllCaps="false"
            android:background="@drawable/dialog_buttons"
            android:text="Save"
            android:elevation="2dp"
            android:id="@+id/btn_additional_save"
            android:drawableEnd="@drawable/ic_save_contact"
            android:drawableTint="@color/white"
            android:layout_marginStart="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/white"/>


    </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>